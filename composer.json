{
    "name": "wearejust/shapeshifter",
    "description": "The Just CMS package, The back-end of things.",
    "authors": [
        {
            "name": "Cees van Egmond",
            "email": "cees.vanegmond@wearejust.com"
        },
        {
            "name": "John in 't Hout",
            "email": "john.inthout@wearejust.com"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "laracasts/flash": "3.*",
        "barryvdh/laravel-elfinder": "0.4.x",
        "gregwar/image": "2.*",
        "cartalyst/sentinel": "5.1.*",
        "laravelcollective/html": "6.*"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.0",
        "wearejust/quality-assurance-hooks": "~1"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Just\\Shapeshifter\\": "src"
        }
    },
    "scripts": {
        "pre-install-cmd": [
            "Just\\Hooks::checkHooks"
        ],
        "pre-update-cmd": [
            "Just\\Hooks::checkHooks"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "bin-dir": "bin"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
